<resources>

    <!-- Light mode theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/colorGreen</item>
        <item name="colorPrimary">@color/colorPrimaryLightMode</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackground">#ffffff</item>
        <item name="colorBottomNavigation">@color/colorBottomNavigationIconLightMode</item>
        <item name="colorBottomNavigationBackground">
            @color/colorBottomNavigationBackgroundLightMode
        </item>
        <item name="colorEditTextBackground">@color/colorEditTextBackgroundDarkMode</item>
        <item name="colorHint">@color/colorHintLightMode</item>
        <item name="colorThumb">@color/colorThumb</item>
        <item name="colorText">@color/colorTextLightMode</item>
    </style>

    <!-- Dark mode theme. -->
    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/colorBlack</item>
        <item name="colorPrimary">@color/colorPrimaryDarkMode</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorBlack</item>
        <item name="colorBackground">#000000</item>
        <item name="colorBottomNavigation">@color/colorBottomNavigationIconDarkMode</item>
        <item name="colorBottomNavigationBackground">
            @color/colorBottomNavigationBackgroundDarkMode
        </item>
        <item name="colorEditTextBackground">@color/colorEditTextBackgroundDarkMode</item>
        <item name="colorHint">@color/colorHintDarkMode</item>
        <item name="colorThumb">@color/colorThumb</item>
        <item name="colorText">@color/colorTextDarkMode</item>
    </style>

</resources>
